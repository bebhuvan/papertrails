name: Fetch RSS Feeds - Batch 1 (Fast Non-Substack)

on:
  schedule:
        # Run at 2:00 AM, 8:00 AM, 2:00 PM UTC (3 times daily)
    - cron: '0 2 * * *'
    - cron: '0 8 * * *'
    - cron: '0 14 * * *'
  workflow_dispatch:
    inputs:
      test_mode:
        description: 'Test with first 5 feeds only'
        required: false
        default: 'false'
        type: boolean

permissions:
  contents: write

