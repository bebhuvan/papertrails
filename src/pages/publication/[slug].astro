import { getArticles } from '../../lib/data';

export async function getStaticPaths() {
  const articles = getArticles();
  const publications = new Map();
  
  articles.forEach(article => {
    const pub = article.publication;
    if (!publications.has(pub.slug)) {
      publications.set(pub.slug, {
        ...pub,
        articles: []
      });
    }
    publications.get(pub.slug).articles.push(article);
  });
  
  return Array.from(publications.values()).map(pub => ({
    params: { slug: pub.slug },
    props: { publication: pub }
  }));
}

const { publication } = Astro.props;
const articleCount = publication.articles.length;

