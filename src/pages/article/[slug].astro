export async function getStaticPaths() {
  const articles = getArticles();
  
  return articles.map(article => ({
    params: { slug: article.id },
    props: { article }
  }));
}

const { article } = Astro.props;

// Helper function to get first few paragraphs as preview
function getPreviewContent(content, maxLength = 800) {
  if (!content) return '';
  
  // Clean up HTML and get plain text
  let cleanText = content.replace(/<[^>]*>/g, '').replace(/\s+/g, ' ').trim();
  
  // If content is short, return it all
  if (cleanText.length <= maxLength) {
    return formatPreviewText(cleanText);
  }
  
  // Split into sentences and build preview up to maxLength
  const sentences = cleanText.split(/[.!?]+/).filter(s => s.trim().length > 15);
  let preview = '';
  
  for (const sentence of sentences) {
    const testLength = preview + sentence + '. ';
    if (testLength.length > maxLength) break;
    preview += sentence + '. ';
  }
  
  return formatPreviewText(preview || cleanText.substring(0, maxLength) + '...');
}

// Helper function to format preview text into paragraphs
function formatPreviewText(text) {
  if (!text) return [];
  
  // Split into sentences
  const sentences = text.split(/[.!?]+/).filter(s => s.trim().length > 15);
  
  // If no valid sentences, return the text as a single paragraph
  if (sentences.length === 0) {
    return text.trim() ? [text.trim()] : [];
  }
  
  // Group sentences into paragraphs (2-3 sentences each)
  const paragraphs = [];
  for (let i = 0; i < sentences.length; i += 2) {
    const paragraph = sentences.slice(i, i + 3).join('. ').trim() + '.';
    if (paragraph.length > 10) {
      paragraphs.push(paragraph);
    }
  }
  
  return paragraphs.length > 0 ? paragraphs.slice(0, 3) : [text.trim()]; // Max 3 paragraphs
}

// Get related articles from same publication or category
function getRelatedArticles(currentArticle, allArticles, limit = 2) {
  return allArticles
    .filter(a => a.slug !== currentArticle.slug)
    .filter(a => 
      a.publication.slug === currentArticle.publication.slug || 
      a.publication.category === currentArticle.publication.category
    )
    .slice(0, limit);
}

const allArticles = getArticles();
const previewParagraphs = getPreviewContent(article.content);
const relatedArticles = getRelatedArticles(article, allArticles);

