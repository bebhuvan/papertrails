---
import { getArticles } from '../lib/data';

// Load data and organize by publication
const articles = getArticles();

// Group articles by publication
const publicationGroups = new Map();
articles.forEach(article => {
    const pubName = article.publication.name;
    if (!publicationGroups.has(pubName)) {
        publicationGroups.set(pubName, {
            publication: article.publication,
            articles: []
        });
    }
    publicationGroups.get(pubName).articles.push(article);
});

// Sort publications by article count (descending)
const sortedPublications = Array.from(publicationGroups.values())
    .sort((a, b) => b.articles.length - a.articles.length);

console.log(`üìö Archive page: ${articles.length} articles from ${sortedPublications.length} publications`);
